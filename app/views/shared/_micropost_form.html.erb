<%= form_with(model: @micropost, class: "w-100 d-flex flex-column") do |f| %>
  <div class="field align-self-start m-2" style="width: 100%; height: 100px;">
    <%= f.text_area :content, placeholder: "Compose new micropost...", style: "width: 100%; height: 100px;" %>
  </div>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.submit "Post", class: "btn btn-primary align-self-end", style: "width:30%" %>
<% end %>